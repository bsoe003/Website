{
  "compilerOptions": {
    "outDir": "public/bundle",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@client/*": ["client/*"],
      "@server/*": ["server/*"],
      "@models/*": ["models/*"]
    }
  },
  "include": [
    "client/**/*.tsx",
    "client/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
  ],
  "types": [
    "typePatches"
  ]
}
